<!DOCTYPE html>
<html lang="es">
  <!-- Include Head -->

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link width="" rel="shortcut icon" href="/images/favicon2.png" />
    <title>Mordisco</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css"
    />
    <link rel="stylesheet" href="/stylesheets/bootstrap-grid.min.css" />
    <link rel="stylesheet" href="/stylesheets/app.css" />
  </head>

  <body>
    <%- include("./partials/header") %>

    <div class="container products-wrapper">
      <div class="row">
        <% if (productos.length == 0) { %>
        <div class="col-12">
          <h2 class="products-title">
            No se encuentran resultados para: "<%= search %>".
          </h2>
        </div>
        <% } else { %>
        <div class="col-12">
          <h2 class="products-title">Resultados de b√∫squeda</h2>
        </div>

        <% for(let i = 0; i < productos.length; i++) { %>
        <div class="col-12 col-sm-6 col-lg-3">
          <section class="product-box">
            <a href="/products/id/<%=productos[i].id%>">
              <figure class="product-box_image">
                <img
                  src="/images/products/<%= productos[i].image %>"
                  alt="<%= productos[i].name %>"
                />
              </figure>
              <article class="product-box_data">
                <h2><%= productos[i].name %></h2>
                <p><%= productos[i].description %></p>
                <p>
                  <strong>Comentarios: </strong><%= productos[i].comments.length
                  %>
                </p>
                <p>
                  <strong>Usuario: </strong>
                  <a href="/users/profile/<%= productos[i].user.id %>"
                    ><%= productos[i].user.username %></a
                  >
                </p>
              </article>
            </a>
          </section>
        </div>
        <% } %> <% } %>
      </div>
    </div>

    <%- include("./partials/footer") %>
  </body>
</html>

<!DOCTYPE html>
<html lang="es">
  <!-- Include Head -->
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link width="" rel="shortcut icon" href="/images/favicon2.png" />
    <title>Mordisco</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css"
    />

    <link rel="stylesheet" href="/stylesheets/bootstrap-grid.min.css" />

    <link rel="stylesheet" href="/stylesheets/app.css" />
  </head>

  <body>
    <%- include("./partials/header", {nombreUsuario: "Leo Messi", isLogged:
    true}) %>

    <div class="banner">
      <img src="images/mesadaCocina.jpg" alt="Banner de ofertas" />
    </div>

    <div class="container products-wrapper">
      <div class="row">
        <div class="col-12">
          <h2 class="products-title">Productos</h2>
        </div>

        <% for(let i = 0; i < products.length; i++) { %>
        <div class="col-12 col-sm-6 col-lg-3">
          <section class="product-box">
            <a href="/products/product/<%=products[i].id%>">  
              <figure class="product-box_image">
                <img
                  src="<%= products[i].image %>"
                  alt="<%= products[i].name %>"
                />
              </figure>
              <article class="product-box_data">
                <h2><%= products[i].name %></h2>
                <p><%= products[i].description %></p>
                <p>
                  <strong>Comentarios: </strong><%=
                  products[i].comments.length %>
                </p>
              </article>
            </a>
          </section>
        </div>
        <% } %>
      </div>
    </div>

    <%- include("./partials/footer") %>
  </body>
</html>

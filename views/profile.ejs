<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" href="/images/favicon2.png" />
    <title>Mordisco</title>

    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css"
    />
    <link rel="stylesheet" href="/stylesheets/bootstrap-grid.min.css" />
    <link rel="stylesheet" href="/stylesheets/app.css" />
  </head>
  <body>
    <%- include("./partials/header", {isLogged: true, nombreUsuario: user.username}) %>
    <section class="info-usuario container products-wrapper">
      <div class="row">
        <div class="img-container offset-3 col-2">
          <img
            src="/images/users/<%= user.profilePicture %>"
            alt="foto de perfil"
            class="foto-perfil"
          />
        </div>
        <div class="data-container col-6">
          <div class="d-flex align-items-center">
            <h1 class="main-title"><%= user.username %></h1>
            <a class="btn mt-3 ml-4" href="">SEGUIR</a>
          </div>
          <div>
            <ul>
              <li><%= user.email %></li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <div class="container products-wrapper">
      <div class="row">
        <div class="col-12">
          <h2 class="products-title">Mis productos</h2>
        </div>

        <p class="col-12">Aun no tenes productos publicados.</p>
      </div>
    </div>

    <%- include("./partials/footer") %>
  </body>
</html>

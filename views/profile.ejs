<!DOCTYPE html>
<html lang="es">
  <!-- Include Head -->
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link width="" rel="shortcut icon" href="/images/favicon2.png" />

    <title>Mordisco</title>
    <!-- Font Awesome Stylesheet -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css"
    />

    <link rel="stylesheet" href="/stylesheets/bootstrap-grid.min.css" />

    <link rel="stylesheet" href="/stylesheets/app.css" />
  </head>
  <body>
    <%- include("./partials/header") %>

    <!-- Datos del usuario -->
    <section class="info-usuario container products-wrapper">
      <div class="row">
        <div class="img-container offset-3 col-2">
          <img
            src="<%= infoUsuario.imagenPerfil%>"
            alt="foto de perfil"
            class="foto-perfil"
          />
        </div>
        <div class="data-container col-6">
          <div class="d-flex align-items-center">
            <h1 class="main-title"><%= infoUsuario.nombre%></h1>
            <a class="btn mt-3 ml-4" href="">SEGUIR</a>
          </div>
          <div>
            <ul class="">
              <li><%= infoUsuario.email%></li>
            </ul>
          </div>
        </div>
      </div>
    </section>
    <!-- /Datos del usuario -->

    <!-- Mis productos -->
    <div class="container products-wrapper">
      <div class="row">
        <div class="col-12">
          <h2 class="products-title">Mis productos</h2>
        </div>
        <!-- Show mis productos -->

        <% for( let i = 0; i < productosUsuario.length; i++ ) { %>
        <div class="col-12 col-sm-6 col-lg-3">
          <section class="product-box">
            <a href="/products/product/<%=productosUsuario[i].id%>">
              <figure class="product-box_image">
                <img
                  src="<%= productosUsuario[i].imagen %>"
                  alt="cafetera moulinex"
                />
              </figure>
              <article class="product-box_data">
                <h2><%= productosUsuario[i].nombre %></h2>
                <p><%= productosUsuario[i].descripcion %></p>
                <p>
                  Comentarios: <%= productosUsuario[i].comentarios.length %>
                </p>
              </article>
            </a>
          </section>
        </div>
        <% } %>
      </div>
    </div>
    <!-- /Mis productos -->

    <%- include("./partials/footer") %>
    <!-- /footer -->
  </body>
</html>

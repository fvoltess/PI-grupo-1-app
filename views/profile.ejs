<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" href="/images/favicon2.png" />
    <title>Mordisco</title>

    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css"
    />
    <link rel="stylesheet" href="/stylesheets/bootstrap-grid.min.css" />
    <link rel="stylesheet" href="/stylesheets/app.css" />
  </head>
  <body>
    <%- include("./partials/header", {isLogged: true, nombreUsuario: infoUsuario.username}) %>

    <!-- Datos del usuario -->
    <section class="info-usuario container products-wrapper">
      <div class="row">
        <div class="img-container offset-3 col-2">
          <img
            src="/images/users/<%= infoUsuario.profilePicture %>"
            alt="foto de perfil"
            class="foto-perfil"
          />
        </div>
        <div class="data-container col-6">
          <div class="d-flex align-items-center">
            <h1 class="main-title"><%= infoUsuario.username %></h1>
            <a class="btn mt-3 ml-4" href="">SEGUIR</a>
          </div>
          <div>
            <ul>
              <li><%= infoUsuario.email %></li>
            </ul>
          </div>
        </div>
      </div>
    </section>
    <!-- /Datos del usuario -->

    <!-- Mis productos -->
    <div class="container products-wrapper">
      <div class="row">
        <div class="col-12">
          <h2 class="products-title">Mis productos</h2>
        </div>

        <% for(let i = 0; i < productosUsuario.length; i++) { %>
        <div class="col-12 col-sm-6 col-lg-3">
          <section class="product-box">
            <a href="/products/product/<%= productosUsuario[i].id %>">
              <figure class="product-box_image">
                <img
                  src="/images/products/<%= productosUsuario[i].image %>"
                  alt="<%= productosUsuario[i].name %>"
                />
              </figure>
              <article class="product-box_data">
                <h2><%= productosUsuario[i].name %></h2>
                <p><%= productosUsuario[i].description %></p>
                <p>
                  Comentarios:
                  <%= productosUsuario[i].comments ? productosUsuario[i].comments.length : 0 %>
                </p>
              </article>
            </a>
          </section>
        </div>
        <% } %>
      </div>
    </div>
    <!-- /Mis productos -->

    <%- include("./partials/footer") %>
  </body>
</html>
